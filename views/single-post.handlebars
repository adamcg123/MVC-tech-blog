<div class="card">
  <h3 class="card-header">{{post.title}} </h3>
    <h4 class="card-header">Posted by {{post.user.username}} today</h4>

  <div class="container">
    <p class="post-text">{{post.post_content}}</p>
  </div>
</div>
<div class="padding-20">
    <form id="comment-form " class="padding-20">
        <label for="comment-text">Leave A Comment</label>
        <input class="padding-20" type="textarea" name="comment-text" id="comment-text">
        <button class="padding-20" id="post-comment-btn">Post!</button>
    </form>
</div>

{{#each post.comments as |aComment|}}
{{> comment aComment}}
{{/each}}
<script src="/js/single-post.js"></script> 