<div class="card">

  <h3 class="card-header">{{post.title}} </h3>
  <h4 class="card-header">Posted by
    {{post.user.username}}
    on
    <p>{{format_date post.created_at}}</p>
  </h4>

  <div class="container">

    <p class="post-text">{{post.post_content}}</p>
  </div>
</div>

{{#if loggedIn}}
  <form class="comment-form card">
    <h3 class="card-header">Add your comment!</h3>
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <button class="alt-btn" type="submit">add comment</button>

  </form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="card">
      <div class="card-header">comment by
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}